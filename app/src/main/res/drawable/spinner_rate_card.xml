<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>

            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">



                    <stroke android:color="@color/contactUsGreyBorder"
                        android:width="@dimen/_1sdp"/>


                    <solid android:color="@color/colorBackground"/>

                    <corners android:radius="1dp"></corners>
                  

                    <padding android:bottom="0dp" android:left="1dp" android:right="0dp" android:top="0dp"></padding>

                </shape>
            </item>

            <item android:right="@dimen/_25sdp">

                <bitmap android:gravity="end" android:src="@drawable/ic_downarrow" />

            </item>


        </layer-list>

    </item>

</selector>
