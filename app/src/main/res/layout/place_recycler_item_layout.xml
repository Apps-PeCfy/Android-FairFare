<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/place_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_toLeftOf="@+id/iv_fav"
        android:orientation="vertical"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp">

        <TextView
            android:textColor="@color/colorGreyText"
            android:id="@+id/place_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lledt"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_toRightOf="@+id/iv_place"
            android:text="Marol Naka,Andheri East,Mumbai"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/lledt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_toRightOf="@+id/iv_place"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <EditText
                android:textColor="@color/gradientstartcolor"
                android:id="@+id/place_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:focusable="true"
                android:text="Home"
                android:textSize="@dimen/_12sdp" />

            <RelativeLayout

                android:id="@+id/ivEdit"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_12sdp">

                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@drawable/slice_edit"
                    android:scaleType="center" />


            </RelativeLayout>


            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/ivSave"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_12sdp">

                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@drawable/slice"
                    android:scaleType="center" />


            </RelativeLayout>


        </LinearLayout>


        <ImageView
            android:id="@+id/iv_place"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_place" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_fav"
        android:layout_width="@dimen/_17sdp"
        android:layout_height="@dimen/_17sdp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/_5sdp"
        android:background="@drawable/ic_fav_unchecked" />


    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/place_item_view"
        android:layout_marginTop="@dimen/_3sdp"
        android:background="@color/lightGray" />

</RelativeLayout>







