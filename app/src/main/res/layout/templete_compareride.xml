<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorBackground"
    app:cardElevation="@dimen/_3sdp"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:background="@drawable/night_mode_square"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/llCar"
            android:layout_width="@dimen/_65sdp"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/iv_vehical"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter" />

            <TextView
                android:textColor="@color/colorGreyText"
                android:layout_marginTop="@dimen/_2sdp"
                android:id="@+id/tv_carName"
                android:gravity="center_horizontal"
                android:text=""
                android:fontFamily="@font/notosansjp_regular"
                android:textSize="@dimen/text_14sp"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="wrap_content"/>



        </LinearLayout>

        <LinearLayout
            android:layout_toStartOf="@+id/ll_amount"
            android:layout_marginEnd="@dimen/_10sdp"
            android:id="@+id/place_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@+id/llCar"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/colorGreyText"
                android:id="@+id/tv_vehialType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:fontFamily="@font/notosansjp_regular"
                android:textSize="@dimen/text_14sp"/>

            <View
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/secondaryLightGray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">

                <TextView
                    android:textColor="@color/colorGreyText"
                    android:id="@+id/place_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/tv_preson"
                    android:layout_gravity="center_vertical"
                    android:gravity="start"
                    android:fontFamily="@font/notosansjp_regular"
                    android:textSize="@dimen/text_14sp" />


                <TextView
                    android:textColor="@color/colorGreyText"
                    android:visibility="visible"
                    android:id="@+id/tv_preson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/notosansjp_regular"
                    android:textSize="@dimen/text_14sp"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/iv_person"
                    android:layout_alignParentEnd="true" />


            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/gradientstartcolor"
                android:textStyle="bold"
                android:id="@+id/tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosansjp_regular"
                android:textSize="@dimen/text_14sp" />

            <TextView
                android:textColor="@color/colorGreyText"
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosansjp_regular"
                android:textSize="@dimen/text_14sp" />


        </LinearLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>



