<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical"
    android:paddingStart="@dimen/_15sdp"
    android:paddingTop="@dimen/_30sdp"
    android:paddingEnd="@dimen/_15sdp">


    <LinearLayout
        android:id="@+id/llLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.9"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Language"
                android:textColor="@color/Black"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_1sdp"
                android:text="Select default app language" />


        </LinearLayout>


        <Spinner
            android:id="@+id/spinner_lang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight="1.1"
            android:background="@drawable/shapespinnersetting"
            android:gravity="bottom"
            android:paddingStart="@dimen/_30sdp"
            android:spinnerMode="dropdown"
            android:textSize="10dp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/llCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llLanguage"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@color/White"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select City"
                android:textColor="@color/Black"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_1sdp"
                android:text="Select default app city" />


        </LinearLayout>


        <Spinner
            android:layout_width="0dp"
            android:id="@+id/spinner_city"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight="1.2"
            android:background="@drawable/shapespinnersetting"
            android:gravity="bottom"
            android:paddingStart="@dimen/_30sdp"
            android:spinnerMode="dropdown"
            android:textSize="10dp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/llCurrency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llCity"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@color/White"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Currency"
                android:textColor="@color/Black"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_1sdp"
                android:text="Select default app Currency" />


        </LinearLayout>


        <Spinner
            android:layout_width="0dp"
            android:id="@+id/spinner_currency"

            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight="0.9"
            android:background="@drawable/shapespinnersetting"
            android:gravity="bottom"
            android:paddingStart="@dimen/_30sdp"
            android:spinnerMode="dropdown"
            android:textSize="10dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llunit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llCurrency"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@color/White"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Measurement Unit"
                android:textColor="@color/Black"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_1sdp"
                android:text="Select default Measurement Unit" />


        </LinearLayout>


        <Spinner
            android:layout_width="0dp"
            android:id="@+id/spinner_unit"

            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/shapespinnersetting"
            android:gravity="bottom"
            android:paddingStart="@dimen/_30sdp"
            android:spinnerMode="dropdown"
            android:textSize="10dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llunit"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@color/White"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Time Format"
                android:textColor="@color/Black"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_1sdp"
                android:text="Select default Time format" />


        </LinearLayout>


        <Spinner
            android:id="@+id/spinner_timeformat"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/shapespinnersetting"
            android:gravity="bottom"
            android:paddingStart="@dimen/_30sdp"
            android:spinnerMode="dropdown"
            android:textSize="10dp" />


    </LinearLayout>


    <Button
        android:id="@+id/btnCompareRide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/_15sdp"
        android:background="@drawable/shape_roundedbtn"
        android:fontFamily="@font/notosansjp_regular"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@android:color/white"

        android:textSize="@dimen/_14sdp" />


</RelativeLayout>


