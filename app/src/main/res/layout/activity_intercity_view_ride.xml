<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        tools:context=".ui.intercityviewride.IntercityViewRideActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/app_gradient"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/_10sdp"
            app:title="@string/title_view_ride"
            android:theme="@style/BaseTheme"
            app:titleTextColor="@color/White"
            app:buttonGravity="center_vertical"
            app:navigationIcon="?attr/homeAsUpIndicator" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:layout_above="@+id/btn_book_ride">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_90sdp"
                    android:visibility="visible"
                    app:cardBackgroundColor="@color/colorBackground"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_8sdp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner_night_mode"
                        android:layout_gravity="center_vertical">

                        <LinearLayout
                            android:id="@+id/llCar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_toStartOf="@+id/ll_date_time"
                            android:gravity="center_vertical"
                            android:orientation="vertical">


                            <ImageView
                                android:id="@+id/img_vehical"
                                android:layout_width="@dimen/_65sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:src="@drawable/iv_auto"
                                android:scaleType="fitCenter" />

                            <TextView
                                android:id="@+id/txt_vehicle_name"
                                android:textColor="@color/colorText"
                                android:layout_width="@dimen/_65sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:gravity="center_horizontal"
                                android:text="Auto" />


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_date_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_date"
                                android:textColor="@color/colorText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_5sdp"
                                android:layout_gravity="end"
                                android:gravity="end"
                                android:text="Thu, Sept 3, at 23:35" />


                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_5sdp"
                                android:layout_gravity="end">

                                <TextView
                                    android:textColor="@color/colorText"
                                    android:id="@+id/txt_person"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/iv_person"
                                    android:drawablePadding="@dimen/_3sdp"
                                    android:text="4"
                                    android:gravity="end"
                                    android:visibility="visible" />


                                <TextView
                                    android:id="@+id/txt_distance_time"
                                    android:textColor="@color/colorText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_toEndOf="@+id/txt_person"
                                    android:gravity="end" />


                            </RelativeLayout>


                        </LinearLayout>


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/crd_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBackground"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_10sdp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:background="@drawable/rounded_corner_night_mode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <TextView
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_10sdp"

                            android:id="@+id/txt_pick_up_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:drawableStart="@drawable/red_circle"
                            android:drawablePadding="@dimen/_15sdp"
                            android:fontFamily="@font/notosansjp_regular"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:text="Pick-up Location"
                            android:textColor="@color/gradientstartcolor" />

                        <View
                            android:id="@+id/view"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_below="@+id/txt_pick_up_location"
                            android:layout_marginStart="@dimen/_35sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:background="@color/secondaryLightGray" />


                        <TextView
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            android:textColor="@color/colorGreyText"
                            android:id="@+id/txt_drop_off_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/view"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:drawableStart="@drawable/triangle"
                            android:drawablePadding="@dimen/_15sdp"
                            android:fontFamily="@font/notosansjp_regular"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:text="Drop-off Location " />


                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/txt_drop_off_location"
                            android:layout_below="@+id/txt_pick_up_location"
                            android:layout_marginStart="@dimen/_14sdp"
                            android:layout_marginTop="-17dp"
                            android:layout_marginBottom="-17dp"
                            android:background="@color/secondaryLightGray" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/_8sdp"
                        android:paddingBottom="@dimen/_8sdp"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/txt_base_fare_label"
                            android:textColor="@color/colorText"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/str_base_fare" />

                        <TextView
                            android:id="@+id/txt_base_fare"
                            android:textColor="@color/colorPrimary"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:textSize="@dimen/text_16sp"
                            android:fontFamily="@font/notosansjp_bold"
                            android:gravity="end"
                            android:paddingEnd="@dimen/_5sdp"
                            android:text="₹ 300" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/secondaryLightGray" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/_8sdp">


                        <RelativeLayout
                            android:id="@+id/rl_additional"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">


                            <TextView
                                android:textColor="@color/colorText"
                                android:textStyle="bold"
                                android:id="@+id/txt_additional_charges_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/_15sdp"
                                android:text="@string/str_additional_charges" />

                            <ImageView
                                android:id="@+id/img_additional_drop_down"
                                android:layout_width="@dimen/_11sdp"
                                android:layout_height="@dimen/_7sdp"
                                android:layout_marginStart="@dimen/_7sdp"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/txt_additional_charges_label"
                                android:src="@drawable/ic_downarrow" />


                        </RelativeLayout>


                        <TextView
                            android:textColor="@color/colorGreyText"
                            android:id="@+id/txt_additional_charges"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:gravity="end"
                            android:paddingEnd="@dimen/_5sdp"
                            android:text="₹ 30" />


                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/ll_additional_charges"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/rounded_corner_charges"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <!-- WAIT CHARGES -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:visibility="gone">

                            <TextView
                                android:textColor="@color/colorGreyText"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/_8sdp"
                                android:paddingBottom="@dimen/_8sdp"
                                android:text="Wait Time Charges" />

                            <TextView
                                android:id="@+id/tv_Wait_time_charge"
                                android:textColor="@color/colorGreyText"

                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:gravity="end"
                                android:paddingTop="@dimen/_8sdp"
                                android:paddingEnd="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_8sdp"
                                android:text="₹ 0.00" />

                            <TextView
                                android:layout_width="1sp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="@dimen/_70sdp"
                                android:background="@color/secondaryLightGray" />
                        </RelativeLayout>


                        <!--CHARGES For Additional KM-->

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp">

                            <TextView
                                android:id="@+id/txt_charges_for_additional_km_label"
                                android:textColor="@color/colorGreyText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/_8sdp"
                                android:paddingBottom="@dimen/_8sdp"
                                android:text="@string/str_charges_for_additional" />

                            <TextView
                                android:textColor="@color/colorGreyText"
                                android:id="@+id/tv_charges_for_additional_km"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:gravity="end"
                                android:paddingTop="@dimen/_8sdp"
                                android:paddingEnd="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_8sdp" />

                            <TextView
                                android:layout_width="1sp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="@dimen/_70sdp"
                                android:background="@color/secondaryLightGray" />

                        </RelativeLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:background="@color/secondaryLightGray" />

                        <!-- LUGGAGE CHARGES -->

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp">

                            <TextView
                                android:textColor="@color/colorGreyText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/_8sdp"
                                android:paddingBottom="@dimen/_8sdp"
                                android:text="Luggage Charges" />

                            <TextView
                                android:id="@+id/tv_Luggage_Charges"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:gravity="end"
                                android:paddingTop="@dimen/_8sdp"
                                android:paddingEnd="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_8sdp"
                                android:text="₹ 30000.00"
                                android:textColor="@color/colorGreyText" />

                            <TextView
                                android:layout_width="1sp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="@dimen/_70sdp"
                                android:background="@color/secondaryLightGray" />

                        </RelativeLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:background="@color/secondaryLightGray" />

                        <!-- TOLL CHARGES -->

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingTop="@dimen/_8sdp"
                                android:paddingBottom="@dimen/_8sdp">


                                <TextView
                                    android:textColor="@color/colorGreyText"

                                    android:id="@+id/txt_toll_charges_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="Toll Charges" />

                                <ImageView
                                    android:id="@+id/ivViewTollInfo"
                                    android:layout_width="@dimen/_16sdp"
                                    android:layout_height="@dimen/_16sdp"
                                    android:layout_centerInParent="true"
                                    android:layout_marginStart="@dimen/_3sdp"
                                    android:layout_toRightOf="@+id/txt_toll_charges_label"
                                    android:background="@drawable/view_info" />


                            </RelativeLayout>


                            <TextView
                                android:textColor="@color/colorGreyText"
                                android:id="@+id/txt_toll_charges"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:gravity="end"
                                android:paddingTop="@dimen/_8sdp"
                                android:paddingEnd="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_8sdp" />

                            <TextView
                                android:layout_width="1sp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="@dimen/_70sdp"
                                android:background="@color/secondaryLightGray" />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:background="@color/secondaryLightGray" />

                        <!-- SURCHARGES -->


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp">

                            <TextView
                                android:textColor="@color/colorGreyText"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/_8sdp"
                                android:paddingBottom="@dimen/_8sdp"
                                android:text="Surcharges" />

                            <TextView
                                android:textColor="@color/colorGreyText"

                                android:id="@+id/tv_SurCharges"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:gravity="end"

                                android:paddingTop="@dimen/_8sdp"
                                android:paddingEnd="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_8sdp"
                                android:text="₹ 30000" />

                            <TextView
                                android:layout_width="1sp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="@dimen/_70sdp"
                                android:background="@color/secondaryLightGray" />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:background="@color/secondaryLightGray" />

                        <!-- Convenience Fees -->


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp">

                            <TextView
                                android:textColor="@color/colorGreyText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/_8sdp"
                                android:paddingBottom="@dimen/_8sdp"
                                android:text="Convenience Fees" />

                            <TextView
                                android:textColor="@color/colorGreyText"
                                android:id="@+id/tv_Convenience_fees"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:gravity="end"
                                android:paddingTop="@dimen/_8sdp"
                                android:paddingEnd="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_8sdp"
                                android:text="₹ 30000" />

                            <TextView
                                android:layout_width="1sp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="@dimen/_70sdp"
                                android:background="@color/secondaryLightGray" />

                        </RelativeLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@color/secondaryLightGray" />




                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/_8sdp"
                        android:paddingBottom="@dimen/_8sdp">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/str_estimated_fare_payable"
                            android:textColor="@color/colorText"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_total_payable"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:gravity="end"
                            android:paddingEnd="@dimen/_5sdp"
                            android:text="₹ 300"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_18sp"
                            android:fontFamily="@font/notosansjp_bold"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/secondaryLightGray" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorText"
                        android:textStyle="bold"
                        android:text="@string/str_rules_and_restrictions"
                        android:layout_marginTop="@dimen/_8sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_rules"
                        android:textSize="@dimen/text_14sp"
                        android:textColor="@color/colorGreyText"
                        android:fontFamily="@font/notosansjp_regular"
                        android:layout_marginTop="@dimen/_8sdp"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <Button

            android:id="@+id/btn_book_ride"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shape_roundedbtn"
            android:fontFamily="@font/notosansjp_regular"
            android:includeFontPadding="false"
            android:paddingTop="@dimen/_7sdp"
            android:paddingBottom="@dimen/_7sdp"
            android:layout_alignParentBottom="true"
            android:text="Book Ride"
            android:textAllCaps="false"
            android:textColor="@color/White"
            android:textSize="@dimen/text_18sp" />




    </RelativeLayout>

</layout>
