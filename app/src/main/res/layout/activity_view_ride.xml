<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_gradient">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_viewRide"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@drawable/app_gradient"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/_10sdp"
        android:theme="@style/BaseTheme"
        app:buttonGravity="center_vertical"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:titleTextAppearance="@style/Toolbar.TitleText"

        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_viewRide"
        android:layout_marginTop="0dp"
        android:background="@color/colorBackground">


        <RelativeLayout
            android:id="@+id/rl_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            android:orientation="vertical">


            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="-30dp"
                tools:context="com.fairfareindia.ui.location.MyLocationActivity" />


            <androidx.cardview.widget.CardView
                android:id="@+id/locationCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/llshowData"
                app:cardBackgroundColor="@color/colorBackground"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_8sdp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_corner_night_mode"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_myCurrentLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:drawableStart="@drawable/red_circle"
                        android:drawablePadding="@dimen/_15sdp"
                        android:fontFamily="@font/notosansjp_regular"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:text="@string/str_pick_up_location"
                        android:textColor="@color/gradientstartcolor"
                        android:textSize="@dimen/text_14sp" />

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_below="@+id/tv_myCurrentLocation"
                        android:layout_marginStart="@dimen/_35sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:background="@color/secondaryLightGray" />


                    <TextView
                        android:id="@+id/tv_myDropUpLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:drawableStart="@drawable/triangle"
                        android:drawablePadding="@dimen/_15sdp"
                        android:fontFamily="@font/notosansjp_regular"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:text="@string/str_drop_off_location"
                        android:textColor="@color/colorGreyText"
                        android:textSize="@dimen/text_14sp" />


                    <View
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/tv_myDropUpLocation"
                        android:layout_below="@+id/tv_myCurrentLocation"
                        android:layout_marginStart="@dimen/_14sdp"
                        android:layout_marginTop="-17dp"
                        android:layout_marginBottom="-17dp"
                        android:background="@color/secondaryLightGray" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:id="@+id/llshowData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/rlBtnLogin"
                android:background="@color/colorBackground"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/tvhideShow"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_3sdp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:background="@drawable/roundedcorner" />
                </RelativeLayout>

                <ScrollView
                    android:id="@+id/homeView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:visibility="visible">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <TextView
                                android:id="@+id/tv_carType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notosansjp_regular"
                                android:paddingStart="@dimen/_15sdp"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/text_14sp"
                                android:textStyle="bold" />


                        </RelativeLayout>


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_90sdp"
                            android:visibility="visible"
                            app:cardBackgroundColor="@color/White"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:cardElevation="@dimen/_8sdp"
                            app:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/rounded_corner_night_mode">

                                <LinearLayout
                                    android:id="@+id/llCar"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:layout_toStartOf="@+id/dateandTime"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">


                                    <ImageView
                                        android:id="@+id/iv_vehical"
                                        android:layout_width="@dimen/_65sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_centerVertical="true"
                                        android:scaleType="fitCenter" />

                                    <TextView
                                        android:id="@+id/tv_carName"
                                        android:layout_width="@dimen/_65sdp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        android:fontFamily="@font/notosansjp_regular"
                                        android:gravity="center_horizontal"
                                        android:text=""
                                        android:textColor="@color/colorGreyText"
                                        android:textSize="@dimen/text_14sp" />


                                </LinearLayout>


                                <LinearLayout
                                    android:id="@+id/dateandTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv_dateandTime"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/notosansjp_regular"
                                        android:paddingTop="@dimen/_5sdp"
                                        android:paddingBottom="@dimen/_5sdp"
                                        android:textColor="@color/colorGreyText"
                                        android:textSize="@dimen/text_14sp" />


                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingTop="@dimen/_5sdp"
                                        android:paddingBottom="@dimen/_5sdp">

                                        <TextView
                                            android:id="@+id/tv_Person"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:drawableStart="@drawable/iv_person"
                                            android:drawablePadding="@dimen/_3sdp"
                                            android:fontFamily="@font/notosansjp_regular"
                                            android:textColor="@color/colorGreyText"
                                            android:textSize="@dimen/text_14sp"
                                            android:visibility="visible" />


                                        <TextView
                                            android:id="@+id/tv_time"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/_10sdp"
                                            android:layout_toRightOf="@+id/tv_Person"
                                            android:fontFamily="@font/notosansjp_regular"
                                            android:textColor="@color/colorGreyText"
                                            android:textSize="@dimen/text_14sp" />


                                    </RelativeLayout>


                                </LinearLayout>


                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:paddingTop="@dimen/_8sdp"
                            android:paddingBottom="@dimen/_8sdp"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notosansjp_regular"
                                android:text="@string/str_estimated_fare"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/text_14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_estcharge"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="@font/notosansjp_regular"
                                android:gravity="end"
                                android:paddingEnd="@dimen/_5sdp"
                                android:textColor="@color/colorGreyText"
                                android:textSize="@dimen/text_14sp" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:background="@color/secondaryLightGray" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:paddingTop="@dimen/_8sdp">


                            <RelativeLayout
                                android:id="@+id/tv_additional"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">


                                <TextView
                                    android:id="@+id/tv_additionalCharges"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawablePadding="@dimen/_15sdp"
                                    android:fontFamily="@font/notosansjp_regular"
                                    android:text="@string/str_additional_charges"
                                    android:textColor="@color/colorText"
                                    android:textSize="@dimen/text_14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="@dimen/_11sdp"
                                    android:layout_height="@dimen/_7sdp"
                                    android:layout_marginStart="@dimen/_7sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_toEndOf="@+id/tv_additionalCharges"
                                    android:background="@drawable/ic_downarrow"
                                    android:fontFamily="@font/notosansjp_regular"
                                    android:textSize="@dimen/text_14sp" />


                            </RelativeLayout>


                            <TextView
                                android:id="@+id/tv_additional_charges"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="@font/notosansjp_regular"
                                android:gravity="end"
                                android:paddingEnd="@dimen/_5sdp"
                                android:textColor="@color/colorGreyText"
                                android:textSize="@dimen/text_14sp" />


                        </RelativeLayout>

                        <LinearLayout


                            android:id="@+id/llAdditionalCharges"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:background="@drawable/rounded_corner_charges"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <!-- WAIT CHARGES -->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosansjp_regular"
                                    android:paddingTop="@dimen/_8sdp"
                                    android:paddingBottom="@dimen/_8sdp"
                                    android:text="@string/str_wait_time_charges"
                                    android:textColor="@color/colorGreyText"
                                    android:textSize="@dimen/text_14sp" />

                                <TextView
                                    android:id="@+id/tv_Wait_time_charge"
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:fontFamily="@font/notosansjp_regular"
                                    android:gravity="end"
                                    android:paddingTop="@dimen/_8sdp"
                                    android:paddingEnd="@dimen/_5sdp"
                                    android:paddingBottom="@dimen/_8sdp"
                                    android:textColor="@color/colorGreyText"
                                    android:textSize="@dimen/text_14sp" />

                                <TextView
                                    android:layout_width="1sp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="@dimen/_70sdp"
                                    android:background="@color/secondaryLightGray" />
                            </RelativeLayout>


                            <!-- NIGHT CHARGES -->

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_15sdp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosansjp_regular"
                                    android:paddingTop="@dimen/_8sdp"
                                    android:paddingBottom="@dimen/_8sdp"
                                    android:text="@string/str_night_charges"
                                    android:textColor="@color/colorGreyText"
                                    android:textSize="@dimen/text_14sp" />

                                <TextView
                                    android:id="@+id/tv_NightCharges"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:fontFamily="@font/notosansjp_regular"
                                    android:gravity="end"
                                    android:paddingTop="@dimen/_8sdp"
                                    android:paddingEnd="@dimen/_5sdp"
                                    android:paddingBottom="@dimen/_8sdp"
                                    android:textColor="@color/colorGreyText"
                                    android:textSize="@dimen/text_14sp" />

                                <TextView
                                    android:layout_width="1sp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="@dimen/_70sdp"
                                    android:background="@color/secondaryLightGray" />

                            </RelativeLayout>


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1sp"
                                android:background="@color/secondaryLightGray" />

                            <!-- LUGGAGE CHARGES -->

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_15sdp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosansjp_regular"
                                    android:paddingTop="@dimen/_8sdp"
                                    android:paddingBottom="@dimen/_8sdp"
                                    android:text="@string/str_luggage_charges"
                                    android:textColor="@color/colorGreyText"
                                    android:textSize="@dimen/text_14sp" />

                                <TextView
                                    android:id="@+id/tv_Luggage_Charges"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:fontFamily="@font/notosansjp_regular"
                                    android:gravity="end"
                                    android:paddingTop="@dimen/_8sdp"
                                    android:paddingEnd="@dimen/_5sdp"
                                    android:paddingBottom="@dimen/_8sdp"
                                    android:textColor="@color/colorGreyText"
                                    android:textSize="@dimen/text_14sp" />

                                <TextView
                                    android:layout_width="1sp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="@dimen/_70sdp"
                                    android:background="@color/secondaryLightGray" />

                            </RelativeLayout>


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1sp"
                                android:background="@color/secondaryLightGray" />

                            <!-- TOLL CHARGES -->

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_15sdp">


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingTop="@dimen/_8sdp"
                                    android:paddingBottom="@dimen/_8sdp">


                                    <TextView
                                        android:id="@+id/tvTollCharges"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:fontFamily="@font/notosansjp_regular"
                                        android:text="@string/str_toll_charges"
                                        android:textColor="@color/colorGreyText"
                                        android:textSize="@dimen/text_14sp" />

                                    <ImageView
                                        android:id="@+id/ivViewTollInfo"
                                        android:layout_width="@dimen/_16sdp"
                                        android:layout_height="@dimen/_16sdp"
                                        android:layout_centerInParent="true"
                                        android:layout_marginStart="@dimen/_3sdp"
                                        android:layout_toRightOf="@+id/tvTollCharges"
                                        android:background="@drawable/view_info" />


                                </RelativeLayout>


                                <TextView
                                    android:id="@+id/tv_tollCharge"

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:fontFamily="@font/notosansjp_regular"
                                    android:gravity="end"
                                    android:paddingTop="@dimen/_8sdp"
                                    android:paddingEnd="@dimen/_5sdp"
                                    android:paddingBottom="@dimen/_8sdp"
                                    android:textColor="@color/colorGreyText"
                                    android:textSize="@dimen/text_14sp" />

                                <TextView
                                    android:layout_width="1sp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="@dimen/_70sdp"
                                    android:background="@color/secondaryLightGray" />

                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1sp"
                                android:background="@color/secondaryLightGray" />

                            <!-- SURCHARGES -->


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_15sdp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosansjp_regular"
                                    android:paddingTop="@dimen/_8sdp"
                                    android:paddingBottom="@dimen/_8sdp"
                                    android:text="@string/str_surcharges"
                                    android:textColor="@color/colorGreyText"
                                    android:textSize="@dimen/text_14sp" />

                                <TextView
                                    android:id="@+id/tv_SurCharges"

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:fontFamily="@font/notosansjp_regular"
                                    android:gravity="end"
                                    android:paddingTop="@dimen/_8sdp"
                                    android:paddingEnd="@dimen/_5sdp"
                                    android:paddingBottom="@dimen/_8sdp"
                                    android:textColor="@color/colorGreyText"
                                    android:textSize="@dimen/text_14sp" />

                                <TextView
                                    android:layout_width="1sp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="@dimen/_70sdp"
                                    android:background="@color/secondaryLightGray" />

                            </RelativeLayout>


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:background="@color/secondaryLightGray" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:paddingTop="@dimen/_8sdp"
                            android:paddingBottom="@dimen/_8sdp"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"

                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notosansjp_regular"
                                android:text="@string/str_discounts_and_offers"
                                android:textColor="@color/colorGreyText"
                                android:textSize="@dimen/text_14sp" />

                            <TextView
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="@font/notosansjp_regular"
                                android:gravity="end"
                                android:paddingEnd="@dimen/_5sdp"
                                android:textColor="@color/colorGreyText"
                                android:textSize="@dimen/text_14sp" />

                            <TextView
                                android:id="@+id/tv_discount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:drawableStart="@drawable/ic_downarrow"
                                android:visibility="gone" />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:background="@color/secondaryLightGray"
                            android:visibility="gone" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:paddingTop="@dimen/_8sdp"
                            android:paddingBottom="@dimen/_8sdp">

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notosansjp_regular"
                                android:text="@string/str_total_fare"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/text_14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_total"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="@font/notosansjp_regular"
                                android:gravity="end"
                                android:paddingEnd="@dimen/_5sdp"
                                android:textColor="@color/gradientstartcolor"
                                android:textSize="@dimen/text_14sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:background="@color/secondaryLightGray" />


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tv_note"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notosansjp_regular"
                                android:text="@string/str_note"
                                android:textColor="@color/Black"
                                android:textSize="@dimen/text_14sp"
                                android:textStyle="bold" />


                            <TextView
                                android:layout_width="wrap_content"
