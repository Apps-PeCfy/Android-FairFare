<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <RelativeLayout
        android:id="@+id/place_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_toLeftOf="@+id/iv_fav"
        android:orientation="vertical"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp">

        <TextView
            android:id="@+id/place_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_toRightOf="@+id/iv_place"
            android:text="Marol Naka,Andheri East,Mumbai"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />


        <RelativeLayout
            android:paddingBottom="@dimen/_3sdp"
            android:layout_below="@+id/place_address"
            android:layout_toRightOf="@+id/iv_place"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/rlplaceAres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:visibility="gone"
                    android:background="@android:color/transparent"
                    android:id="@+id/place_area"
                    android:cursorVisible="true"
                    android:focusable="true"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:text="Home" />

                <TextView
                    android:visibility="gone"
                    android:background="@android:color/transparent"
                    android:id="@+id/tv_place_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:text="Home" />


            </RelativeLayout>


            <ImageView
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/rlplaceAres"
                android:scaleType="center"
                android:id="@+id/ivEdit"
                android:background="@drawable/slice_edit"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp" />



        </RelativeLayout>



        <ImageView
            android:layout_marginStart="@dimen/_15sdp"
            android:id="@+id/iv_place"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_place" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_22sdp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/_5sdp"
        android:background="@drawable/my_location_close" />


    <View
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_below="@+id/place_item"
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/lightGray" />

</RelativeLayout>







