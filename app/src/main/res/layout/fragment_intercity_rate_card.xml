<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical"
        tools:context=".ui.drawer.ratecard.IntercityRateCardFragment">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:visibility="visible"
            app:tabIndicatorColor="@color/gradientstartcolor"
            app:tabIndicatorHeight="1dp"
            app:tabSelectedTextColor="@color/colorText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="15dp">

            <Spinner
                android:id="@+id/spinner_from_city"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_weight="1"
                android:background="@drawable/spinner_rate_card"
                android:spinnerMode="dropdown"
                android:textSize="@dimen/text_14sp"
                android:fontFamily="@font/notosansjp_regular" />


            <Spinner
                android:id="@+id/spinner_to_city"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_weight="1"
                android:background="@drawable/spinner_rate_card"
                android:spinnerMode="dropdown"
                android:textSize="@dimen/text_14sp"
                android:fontFamily="@font/notosansjp_regular" />


        </LinearLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />



                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rl_no_data"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/ivImg"
                        android:background="@drawable/empty_disput"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"/>

                    <TextView
                        android:textColor="@color/colorText"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:id="@+id/txt_no_data"
                        android:text="@string/str_no_rate_cards"
                        android:layout_below="@+id/ivImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>


            </RelativeLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </LinearLayout>
</layout>
